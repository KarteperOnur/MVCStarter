@model List<Homework0705.Models.Category>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <a href="/Category/Create">Create Category</a>
        <table border="1" width="100%">
            <tr>
                <th>ID</th>
                <th>CategoryName</th>
            </tr>

            @if (Model.Count > 0)
            {
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.ID</td>
                        <td>@category.CategoryName</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="2">
                        <span>Herhangi bir kategori bulunamadı!</span>
                    </td>
                </tr>
            }



        </table>
    </div>
</body>
</html>
