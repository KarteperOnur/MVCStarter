@model List<Homework0705.Models.Product>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
       <a href="/Product/Create">Create Product</a> 
        <table border="1" width="100%">
            <tr>
                <th>ID</th>
                <th>ProductName</th>
                <th>UnitPrice</th>

            </tr>

            @if (Model.Count > 0)
            {
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ID</td>
                        <td>@product.ProductName</td>
                        <td>@product.UnitPrice</td>

                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3">
                        <span>Herhangi bir ürün bulunamadı!</span>
                    </td>
                </tr>
            }



        </table>
    </div>
</body>
</html>
